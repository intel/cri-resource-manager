apiVersion: v1
kind: Pod
metadata:
  name: ${NAME}
  labels:
    app: ${NAME}
  annotations:
    cri-resource-manager.intel.com/prefer-isolated-cpus: '${ISO}'
spec:
  containers:
  - image: busybox
    command:
      - sh
      - -c
      - echo ${NAME}c0 \$(sleep inf)
    imagePullPolicy: IfNotPresent
    name: busybox
    resources:
      requests:
        cpu: ${CPUREQ}
        memory: ${MEMREQ}
      limits:
        cpu: ${CPULIM}
        memory: ${MEMLIM}
  terminationGracePeriodSeconds: 1
