apiVersion: v1
kind: Pod
metadata:
  name: ${NAME}
  labels:
    app: ${NAME}
spec:
  containers:
  $(for contnum in $(seq 1 ${CONTCOUNT}); do echo "
  - name: ${NAME}c$(( contnum - 1 ))
    image: busybox
    imagePullPolicy: IfNotPresent
    command:
      - sh
      - -c
      - echo ${NAME}c$(( contnum - 1 )) \$(sleep inf)
    resources:
      requests:
        cpu: ${CPUREQ}
        memory: ${MEMREQ}
      limits:
        cpu: ${CPULIM}
        memory: ${MEMLIM}
  "; done )
  terminationGracePeriodSeconds: 1
